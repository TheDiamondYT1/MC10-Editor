<Controls:MetroWindow x:Class="MC10Editor.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"              
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        GlowBrush="Black"
        BorderThickness="0" 
        Title="Copying file..." Height="202" Width="506">
    <Grid>
        <Controls:MetroProgressBar IsIndeterminate="true" x:Name="progressBar" HorizontalAlignment="Left" Margin="41,86,0,0" VerticalAlignment="Top" Width="418" Height="47"/>
        <Label x:Name="labelCopying"  HorizontalAlignment="Left" Margin="21,14,0,0" VerticalAlignment="Top">
            <Label.RenderTransform>
                <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
            </Label.RenderTransform>
            Copying file
        </Label>
        <Button x:Name="buttonLaunch" Visibility="Hidden" Content="Launch Minecraft" HorizontalAlignment="Left" Margin="344,119,0,0" VerticalAlignment="Top" Width="125" Height="33" Click="buttonLaunch_Click" />
    </Grid>
</Controls:MetroWindow>